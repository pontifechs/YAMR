<?xml version="1.0" encoding="utf-8"?>
<manifest package="ninja.dudley.yamr"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".PageViewer"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_page_viewer"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen"/>
        <activity
            android:name=".SeriesViewer"
            android:label="@string/title_activity_chapter_viewer"
            />
        <activity
            android:name=".ProviderViewer"
            android:label="@string/title_activity_series_viewer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service android:name=".fetch.impl.MangaPandaFetcher"/>
        <provider
            android:name=".db.DBProvider"
            android:authorities="ninja.dudley.yamr.db.DBProvider"
            />
    </application>
</manifest>
